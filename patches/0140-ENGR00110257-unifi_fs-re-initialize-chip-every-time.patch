@@ -692,7 +685,6 @@ static inline void mxc_init_mmc(void)
 	}
 	spba_take_ownership(SPBA_SDHC2, SPBA_MASTER_A | SPBA_MASTER_C);
 	(void)platform_device_register(&mxcsdhc2_device);
-#endif
 }
